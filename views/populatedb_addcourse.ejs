<% include partials/academic_header %>
<script src="js/populatedb.js" type="text/javascript"></script>
<header class="w3-panel w3-opacity" style="padding:50px 16px">
    <h1 style="padding-bottom: 20px" class="w3-center">Add a Course to the Database</h1>
    <h2 class="w3-xlarge w3-center"  style="padding-bottom: 70px">Note: You can only add data for your registered university</h2>
    <div id = "addcourse_status" style="padding: 20px"></div>
    <div class = "w3-container">
        <div class = "form-group" style="padding: 20px">
            <label>University Name</label>
            <select class="w3-input" name="uniname" id="addcourse_uniname">
                <% for(var i=0 ; i<unidetails.length ; i++){ %>
                    <option value="<%=unidetails[i].uid%>"><%=unidetails[i].uname%></option>
                <% } %>
            </select>
        </div>

        <div class = "form-group" style="padding: 20px">
                <label>Course Name</label><br>
                <input type="text" class="form-control w3-input" name="coursename" placeholder="Course name" id="addcourse_coursename">
        </div>

        <div class = "form-group" style="padding: 20px">
            <label>Course Type</label><br>
            <select class="w3-input" name="coursetype" id="addcourse_coursetype">
                <option value="undergraduate">Undergraduate</option>
                <option value="postgraduate">Postgraduate</option>
            </select>
        </div>

        <div class = "form-group" style="padding: 20px">
                <label>Lecture Hours</label><br>
                <input type="number" class="form-control w3-input" name="lecturehours" placeholder="Lecture Hours" id="addcourse_lecturehours">
        </div>


        <div class = "form-group" style="padding: 20px">
                <label>Lab Hours</label><br>
                <input type="number" class="form-control w3-input" name="labhours" placeholder="Lab Hours" id="addcourse_labhours">
        </div>

        <div class = "form-group" style="padding: 20px">
                <label>Academic Year</label><br>
                <input type="text" class="form-control w3-input" name="academicyear" placeholder="Academic Year" id="addcourse_academicyear">
        </div>
        
        <div class = "form-group" style="padding: 20px">
        <button type="submit" class="btn btn-default w3-center w3-teal w3-button" id="addcourse_submit">Submit</button>
        </div>

        </div>


        




    
</header>